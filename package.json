{
  "name": "tslint-config-silind",
  "version": "1.0.4",
  "description": "An opinionated TSLint configuration preset for writing scalable, clean and hygienic code",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:coverage": "npm test -- --coverage",
    "test:badges": "npm run test:coverage && make-coverage-badge"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Silind/tslint-config-silind.git"
  },
  "keywords": [
    "tslint",
    "typescript",
    "clean code"
  ],
  "author": "Silind Software",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Silind/tslint-config-silind/issues"
  },
  "homepage": "https://github.com/Silind/tslint-config-silind#readme",
  "dependencies": {
    "tslint": "^5.18.0",
    "tsutils": "^3.14.0",
    "typescript": "^3.5.2"
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "jest": "^24.8.0",
    "make-coverage-badge": "^1.1.1",
    "ts-jest": "^24.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/**/*.test.(ts|tsx)"
    ],
    "coverageReporters": [
      "json-summary"
    ]
  }
}
